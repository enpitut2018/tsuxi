<h1>アカウント作成</h1>

<%= form_for(@user) do |f| %>

  <table border="1">
    <tr>
      <th><%= f.label :name, '名前' %></th>
      <td><%= f.text_field :name %></td>
    </tr>
    <tr>
      <th><%= f.label :email, 'メールアドレス' %></th>
      <td><%= f.text_field :email %></td>
    </tr>
    <tr>
      <th><%= f.label :password, 'パスワード' %></th>
      <td><%= f.password_field :password %></td>
    </tr>
    <tr>
      <th><%= f.label :password_confirmation, '確認' %></th>
      <td><%= f.password_field :password_confirmation %></td>
    </tr>
    <tr>
        <th><%= f.label :picture, 'アイコン' %></th>
        <td><%= f.file_field :picture, id: :user_picture %></td>
    </tr>
    <tr>
      <th><%= f.label :gakurui, '学類' %></th>
      <td><%= f.select :gakurui,[["人文学類", "人文学類"], ["比較文化学類", "比較文化学類"],
       ["日本語・日本文化学類", "日本語・日本文化学類"], ["社会学類", "社会学類"],
      ["国際総合学類", "国際総合学類"], ["教育学類", "教育学類"],
      ["心理学類", "心理学類"], ["障害科学類", "障害科学類"],
      ["生物学類", "生物学類"], ["生物資源学類", "生物資源学類"],
      ["地球学類", "地球学類"], ["数学類", "数学類"], ["物理学類", "物理学類"],
      ["化学類", "化学類"], ["応用理工学類", "応用理工学類"], ["工学システム学類", "工学システム学類"],
      ["社会工学類", "社会工学類"], ["情報科学類", "情報科学類"], ["情報メディア創成", "情報メディア創成"],
      ["知識情報・図書館学類", "知識情報・図書館学類"], ["医学類", "医学類"], ["看護学類", "看護学類"],
      ["医療科学類", "医療科学類"], ["体育専門学群", "体育専門学群"], ["芸術専門学群", "芸術専門学群"]] %></td>
    </tr>
    <tr>
      <th><%= f.label :gakunen, '学年' %></th>
      <td><%= f.select :gakunen,[["1年", "1年"], ["2年", "2年"], ["3年", "3年"], ["4年", "4年"]] %></td>
    </tr>
    <tr>
      <th><%= f.label :sex, '性別' %></th>
      <td><%= f.select :sex,[["男", "男"], ["女", "女"]] %></td>
    </tr>
    <tr>
      <th><%= f.label :circle, 'サークル' %></th>
      <td><%= f.text_field :circle %></td>
    </tr>
    <tr>
      <th><%= f.label :bite, 'バイト' %></th>
      <td><%= f.text_field :bite %></td>
    </tr>
    <tr>
      <th><%= f.label :birthday, '生年月日' %></th>
      <td><%= f.date_field :birthday %></td>
    </tr>
    <tr>
      <th><%= f.label :hobby, '趣味' %></th>
      <td><%= f.text_field :hobby %></td>
    </tr>
    <tr>
      <th><%= f.label :comment, '一言' %></th>
      <td><%= f.text_area :comment %></td>
    </tr>
  </table>

  <%= f.submit 'アカウントを作成する' %>

<% end %>